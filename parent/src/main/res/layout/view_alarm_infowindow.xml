<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_250"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    android:paddingRight="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5">

    <LinearLayout
        android:id="@+id/trStudentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="学生姓名："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="IMEI："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtIMEI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="定位时间："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trLocationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="定位方式："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtLocationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="设备电量："
            android:textColor="@color/color_black_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <com.android.widget.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/powerBar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtScore"
                app:rcBackgroundPadding="1dp"
                app:rcRadius="3dp" />

            <TextView
                android:id="@+id/txtPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trSignal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="设备信号："
            android:textColor="@color/color_black_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <com.android.widget.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/signalBar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtScore"
                app:rcBackgroundPadding="1dp"
                app:rcRadius="3dp" />

            <TextView
                android:id="@+id/txtSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trAlarmType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="报警类型："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtAlarmType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:lines="1"
            android:text="地理位置："
            android:textColor="@color/color_black_2" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_black_2" />
    </LinearLayout>

</LinearLayout>