<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlQuestionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/llContent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/icon_exclamation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新发送" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/sendProgress"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/llContent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgUser">

            <!--文字-->
            <io.github.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/txtContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/chatto_bg"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:maxWidth="@dimen/dp_200"
                android:text=""
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />
            <!--声音-->
            <RelativeLayout
                android:id="@+id/rlVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/id_recorder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="12'"
                    android:textColor="#ff777777" />

                <RelativeLayout
                    android:id="@+id/id_recorder_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_recorder_time"
                    android:background="@drawable/chatto_bg_focused">

                    <View
                        android:id="@+id/id_recorder_anim"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/adj" />

                    <View
                        android:id="@+id/error_file"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_error_filenotfound"
                        android:visibility="gone" />

                </RelativeLayout>
            </RelativeLayout>
            <!--图片-->
            <com.android.widget.view.BubbleImageView
                android:id="@+id/bubImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/imgUser"
                android:maxHeight="@dimen/dp_200"
                android:src="@drawable/logo_welcome"
                android:visibility="gone"
                app:bubble_angle="@dimen/dp_10"
                app:bubble_arrowHeight="@dimen/dp_10"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="@dimen/dp_10"
                app:bubble_arrowTop="@dimen/dp_20"
                app:bubble_arrowWidth="@dimen/dp_10" />
        </LinearLayout>

        <com.android.widget.view.CircularImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:background="@drawable/user_defaulthead" />
    </RelativeLayout>
</LinearLayout>
