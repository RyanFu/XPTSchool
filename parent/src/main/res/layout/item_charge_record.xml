<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llhomeworkItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_amount"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5">

        <TextView
            android:id="@+id/txt_tn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号：20160612"
            android:textColor="@color/color_black_3"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/txt_record_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textColor="@color/color_black_1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/txt_record_detail"
                android:background="@drawable/bg_pay_alipay"
                android:padding="@dimen/dp_2"
                android:text="支付宝"
                android:textColor="@color/color_black_3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txt_pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/bg_pay_success"
                android:padding="@dimen/dp_2"
                android:text="成功"
                android:textColor="@color/color_black_3"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="时间：20160612"
            android:textColor="@color/color_black_3"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:maxWidth="@dimen/dp_100"
        android:text="100.00"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>
