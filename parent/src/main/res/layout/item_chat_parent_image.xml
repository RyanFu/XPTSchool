<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.widget.view.BubbleImageView
        android:id="@+id/bubImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/dp_120"
        android:minHeight="@dimen/dp_100"
        android:minWidth="@dimen/dp_100"
        android:scaleType="fitXY"
        android:src="@drawable/bg_stu_card"
        app:bubble_angle="@dimen/dp_5"
        app:bubble_arrowHeight="@dimen/dp_10"
        app:bubble_arrowLocation="right"
        app:bubble_arrowOffset="@dimen/dp_5"
        app:bubble_arrowTop="@dimen/dp_15"
        app:bubble_arrowWidth="@dimen/dp_5" />
</LinearLayout>