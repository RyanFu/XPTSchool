<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xptschool.teacher.ui.question.QuestionDetailActivity">

    <TextView
        android:id="@+id/txtQstTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_5"
        android:text=""
        android:textSize="@dimen/dp_16" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlSend"
        android:layout_below="@+id/txtQstTitle"
        android:divider="@null"
        android:transcriptMode="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_grey" />

    <RelativeLayout
        android:id="@+id/rlSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f6"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2">

        <EditText
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_5"
            android:layout_toLeftOf="@+id/btnSend"
            android:layout_toRightOf="@+id/imgVoiceOrText"
            android:background="@drawable/chat_input_bg"
            android:maxEms="200"
            android:maxLines="3"
            android:padding="@dimen/dp_8"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/btn_bg_normal"
            android:text="@string/btn_send" />

    </RelativeLayout>

</RelativeLayout>
