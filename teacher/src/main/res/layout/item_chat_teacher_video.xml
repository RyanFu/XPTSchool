<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.widget.view.BubbleImageView
        android:id="@+id/bubView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:bubble_angle="@dimen/dp_5"
        app:bubble_arrowHeight="@dimen/dp_10"
        app:bubble_arrowLocation="right"
        app:bubble_arrowOffset="@dimen/dp_5"
        app:bubble_arrowTop="@dimen/dp_15"
        app:bubble_arrowWidth="@dimen/dp_5" />

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chat_video_play" />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/colorWhite" />
</RelativeLayout>